{
  "name": "tcg-probabilities-calculator",
  "version": "1.0.0",
  "description": "A probability calculator for trading card game deck optimization",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "node scripts/generate-card-database.js && node scripts/generate-sitemap.js && vite build",
    "build:db": "node scripts/generate-card-database.js",
    "build:sitemap": "node scripts/generate-sitemap.js",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "validate:seo": "node scripts/validate-seo.js",
    "migrate:images": "node scripts/migrate-card-images.js",
    "migrate:images:optimized": "node scripts/migrate-card-images-optimized.js",
    "migrate:images:final": "node scripts/migrate-card-images-final.js",
    "validate:migration": "node scripts/validate-migration.js",
    "validate:migration:final": "node scripts/validate-migration-final.js",
    "upload:card-database": "node scripts/upload-card-database.js"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.10",
    "@vercel/analytics": "^1.5.0",
    "@vercel/blob": "^1.1.1",
    "dotenv": "^17.2.0",
    "katex": "^0.16.22",
    "node-fetch": "^2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-katex": "^3.1.0",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "jsdom": "^27.2.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.10",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
